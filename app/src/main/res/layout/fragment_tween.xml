<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/iv_tween"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:layout_width="80dp" android:layout_height="80dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginTop="50dp" android:layout_height="wrap_content" android:orientation="horizontal"  android:layout_gravity="center">
            <Button
                    android:id="@+id/btn_tween"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:text="循环补间动画"/>

            <Button android:id="@+id/btn_tween_xml"  android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_height="wrap_content"
                    android:text="xml"/>
        </LinearLayout>

    <Button
            android:id="@+id/btn_group"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="组和"/>
</LinearLayout>